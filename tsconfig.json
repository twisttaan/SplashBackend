{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
