{
  "name": "splashbackend",
  "description": "The backend for Splash",
  "scripts": {
    "build": "rimraf lib && tsc",
    "start": "node .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "dev": "nodemon -e .ts,.html,.env --ignore lib/ --exec \"clear && yarn run build && yarn run start || exit 1\""
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^0.24.0",
    "dotenv": "^16.0.0",
    "fastify": "^3.25.3",
    "fastify-autoload": "^3.9.0",
    "fastify-cors": "^6.0.2",
    "prisma": "^3.11.0"
  },
  "devDependencies": {
    "@prisma/client": "^3.11.0",
    "@types/node": "^17.0.21",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "private": true
}
